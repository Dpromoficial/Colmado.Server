    {
        @foreach (var vents in Modelo.Vents)
        {
            ventas += vents.Total;
        }
    }
    <div class="card-header mt-sm-5" style="background-image: linear-gradient(180deg, rgb(0, 141, 255) 0%, #1EDADF 70%); border-radius:10px;">
        <img src="/paquete.png" style="width:5rem" />
        <label class="card-group"> <b>VENTAS</b></label> @*CAMBIO*@
        
        <label class="card-text">Ventas Hoy: @ventas</label>
    </div>
</div>




@using Colmado.Server.Database;
<div style="width:100%; background-image:url(portadainventario.jpg);">
    @if (Modelo.Products.Any())
    {
        @foreach (var vents in Modelo.Products)
        {
            product++;
        }
    }
    <div class="card-header " style="background-image: linear-gradient(180deg, rgb(0, 141, 255) 0%, #1EDADF 70%);border-radius:10px;">
        <img src="/tienda-de-comestibles.png" style="width:5rem"/>
        <label class="card-group"><b>PRODUCTO</b></label>
        <label class="card-text">Inventario: @product</label>
    </div>

    @*JUNIOR LE HICE UN CAMBIO EN LA LINEA 10 QUE TE FALTO*@

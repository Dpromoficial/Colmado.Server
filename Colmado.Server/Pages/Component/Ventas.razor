<h3 >VENTAS</h3>

<ul>
    @foreach (var venta in ventas)
    {
        <li class="card-header mt-3 border-dark" style="list-style:none; height:3rem; background-color:rgb(68,155,65); color:aliceblue; font-weight:bold; border-radius:10px">Nombre: @venta.NombreProducto - Monto: RD$ @venta.Monto</li>
    }
</ul>

@code {
    
    List<Venta> ventas = new List<Venta>//listas de ventas
    {
        new Venta { NombreProducto = "SALSA 8oz", Monto = 10 },
        new Venta { NombreProducto = "SOPITA 12/1", Monto = 89 },
        new Venta { NombreProducto = "EVAPORADA 377", Monto = 58 }
    };

    
    public class Venta//clase ventas
    {
        public string? NombreProducto { get; set; }
        public decimal Monto { get; set; }
    }
}

